<% selected_students.each_with_index do |student, index|%>
  <div class="container p-0">
    <div class="row">
      <div class="col-3">
        <%= label :lane_number, 'Lane Number', class: 'form-label' %>
        <%= number_field_tag "race[lanes_attributes][#{index}][lane_number]",{}, class: 'form-control', required: true, min: 1 %>
      </div>
      <div class="col-3 d-flex align-items-center justify-content-center mt-4">
        <i class="bi bi-arrow-right-circle-fill"></i>
      </div>
      <div class="col-6">
        <%= label :student_id, 'Student', class: 'form-label' %>
        <%= select_tag "race[lanes_attributes][#{index}][student_id]", options_for_select(selected_students.pluck(:name, :id)), include_blank: "Select a student", class: 'form-control', required: true %>
      </div>
    </div>
    <hr />
  </div>
<% end %>