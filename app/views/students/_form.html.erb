<%= form_with(model: @student, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>
  <div class="mt-2">
    <%= form.submit @student.new_record? ? 'Create' : 'Update', class: "btn btn-primary" %>
    <%= link_to 'Back to Students', students_path, class: 'btn btn-secondary' %>
  </div>
<% end %>

